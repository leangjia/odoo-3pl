<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wave Rule List View -->
    <record id="view_wms_wave_rule_list" model="ir.ui.view">
        <field name="name">wms.wave.rule.list</field>
        <field name="model">wms.wave.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="trigger_type"/>
                <field name="trigger_value"/>
                <field name="priority"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Wave Rule Form View -->
    <record id="view_wms_wave_rule_form" model="ir.ui.view">
        <field name="name">wms.wave.rule.form</field>
        <field name="model">wms.wave.rule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_wave_manually" type="object" string="Generate Wave Now" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="warehouse_id"/>
                            <field name="trigger_type"/>
                        </group>
                        <group>
                            <field name="trigger_value"/>
                            <field name="priority"/>
                            <field name="time_period"/>
                        </group>
                    </group>
                    <group string="Wave Limits">
                        <group>
                            <field name="max_orders_per_wave"/>
                            <field name="max_volume_per_wave"/>
                        </group>
                        <group>
                            <field name="max_weight_per_wave"/>
                            <field name="max_pickers"/>
                        </group>
                    </group>
                    <field name="active" invisible="1"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Wave Rule Search View -->
    <record id="view_wms_wave_rule_search" model="ir.ui.view">
        <field name="name">wms.wave.rule.search</field>
        <field name="model">wms.wave.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="trigger_type"/>
                <field name="priority"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_warehouse" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter name="group_by_trigger" string="Trigger Type" context="{'group_by': 'trigger_type'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>