<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Management Menu -->
    <menuitem id="menu_wms_document_management_root"
              name="Document Management"
              parent="stock.menu_stock_warehouse_mgmt"
              sequence="130"/>

    <menuitem id="menu_wms_documents"
              name="Documents"
              parent="menu_wms_document_management_root"
              action="action_wms_document_list"
              sequence="10"/>

    <menuitem id="menu_wms_document_categories"
              name="Categories"
              parent="menu_wms_document_management_root"
              action="action_wms_document_category_list"
              sequence="20"/>

    <menuitem id="menu_wms_document_tags"
              name="Tags"
              parent="menu_wms_document_management_root"
              action="action_wms_document_tag_list"
              sequence="30"/>

    <menuitem id="menu_wms_document_templates"
              name="Templates"
              parent="menu_wms_document_management_root"
              action="action_wms_document_template_list"
              sequence="40"/>

    <menuitem id="menu_wms_document_workflows"
              name="Workflows"
              parent="menu_wms_document_management_root"
              action="action_wms_document_workflow_list"
              sequence="50"/>

    <menuitem id="menu_wms_document_archives"
              name="Archives"
              parent="menu_wms_document_management_root"
              action="action_wms_document_archive_list"
              sequence="60"/>

    <!-- Actions -->
    <record id="action_wms_document_list" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">wms.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload and manage documents
            </p><p>
                Upload, categorize, and manage warehouse documents and files.
            </p>
        </field>
    </record>

    <record id="action_wms_document_category_list" model="ir.actions.act_window">
        <field name="name">Document Categories</field>
        <field name="res_model">wms.document.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage document categories
            </p><p>
                Organize documents into categories for better management.
            </p>
        </field>
    </record>

    <record id="action_wms_document_tag_list" model="ir.actions.act_window">
        <field name="name">Document Tags</field>
        <field name="res_model">wms.document.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage document tags
            </p><p>
                Create and manage tags for document classification.
            </p>
        </field>
    </record>

    <record id="action_wms_document_template_list" model="ir.actions.act_window">
        <field name="name">Document Templates</field>
        <field name="res_model">wms.document.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage document templates
            </p><p>
                Create and use templates for standard documents.
            </p>
        </field>
    </record>

    <record id="action_wms_document_workflow_list" model="ir.actions.act_window">
        <field name="name">Document Workflows</field>
        <field name="res_model">wms.document.workflow</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage document workflows
            </p><p>
                Define approval and retention workflows for documents.
            </p>
        </field>
    </record>

    <record id="action_wms_document_archive_list" model="ir.actions.act_window">
        <field name="name">Document Archives</field>
        <field name="res_model">wms.document.archive</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage document archives
            </p><p>
                View and restore archived documents.
            </p>
        </field>
    </record>
</odoo>