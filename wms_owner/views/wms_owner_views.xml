<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Warehouse Owner List View -->
    <record id="view_wms_owner_list" model="ir.ui.view">
        <field name="name">wms.owner.list</field>
        <field name="model">wms.owner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="owner_code"/>
                <field name="storage_fee_rate"/>
                <field name="inbound_fee"/>
                <field name="outbound_fee"/>
                <field name="billing_cycle"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Warehouse Owner Form View -->
    <record id="view_wms_owner_form" model="ir.ui.view">
        <field name="name">wms.owner.form</field>
        <field name="model">wms.owner</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="owner_code"/>
                            <field name="is_company"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="storage_fee_rate"/>
                            <field name="inbound_fee"/>
                            <field name="outbound_fee"/>
                            <field name="min_charge"/>
                            <field name="billing_cycle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contact Information">
                            <group>
                                <field name="partner_id" invisible="1"/>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="city"/>
                                <field name="state_id" options="{'no_open': True}"/>
                                <field name="zip"/>
                                <field name="country_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </page>
                        <page string="Billing Rules">
                            <field name="partner_id" invisible="1"/>
                            <field name="billing_rules" context="{'default_owner_id': parent.id}">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="operation_type"/>
                                    <field name="service_type"/>
                                    <field name="unit_price"/>
                                    <field name="price_type"/>
                                    <field name="min_charge"/>
                                    <field name="calculation_basis"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Warehouse Owner Search View -->
    <record id="view_wms_owner_search" model="ir.ui.view">
        <field name="name">wms.owner.search</field>
        <field name="model">wms.owner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_code"/>
                <field name="billing_cycle"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
</odoo>