<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu Item -->
    <menuitem id="wms_main_menu" name="WMS" sequence="10"/>

    <!-- Owner Management Menu -->
    <menuitem id="wms_owner_menu" name="Owner Management" parent="wms_main_menu" sequence="10"/>

    <!-- Owner Submenu -->
    <menuitem id="wms_owner_submenu" name="Owners" parent="wms_owner_menu" sequence="10"
              action="action_wms_owner"/>

    <!-- Billing Rules Submenu -->
    <menuitem id="wms_billing_rules_submenu" name="Billing Rules" parent="wms_owner_menu" sequence="20"
              action="action_wms_billing_rule"/>

    <!-- Billing Records Submenu -->
    <menuitem id="wms_billing_records_submenu" name="Billing Records" parent="wms_owner_menu" sequence="30"
              action="action_wms_billing_record"/>

    <!-- Actions -->
    <record id="action_wms_owner" model="ir.actions.act_window">
        <field name="name">Warehouse Owners</field>
        <field name="res_model">wms.owner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first warehouse owner</p>
        </field>
    </record>

    <record id="action_wms_billing_rule" model="ir.actions.act_window">
        <field name="name">Billing Rules</field>
        <field name="res_model">wms.billing.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create billing rules for warehouse owners</p>
        </field>
    </record>

    <record id="action_wms_billing_record" model="ir.actions.act_window">
        <field name="name">Billing Records</field>
        <field name="res_model">wms.billing.record</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">View billing records</p>
        </field>
    </record>
</odoo>