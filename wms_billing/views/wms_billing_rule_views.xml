<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Billing Rule Tree View -->
    <record id="view_wms_billing_rule_list" model="ir.ui.view">
        <field name="name">wms.billing.rule.tree</field>
        <field name="model">wms.billing.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="operation_type"/>
                <field name="service_type"/>
                <field name="unit_price"/>
                <field name="price_type"/>
                <field name="min_charge"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Billing Rule Form View -->
    <record id="view_wms_billing_rule_form" model="ir.ui.view">
        <field name="name">wms.billing.rule.form</field>
        <field name="model">wms.billing.rule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="owner_id"/>
                            <field name="operation_type"/>
                        </group>
                        <group>
                            <field name="service_type"/>
                            <field name="price_type"/>
                            <field name="calculation_basis"/>
                        </group>
                    </group>
                    <group string="Pricing">
                        <group>
                            <field name="unit_price"/>
                            <field name="min_charge"/>
                            <field name="max_charge"/>
                        </group>
                        <group>
                            <field name="apply_seasonal_factor"/>
                            <field name="seasonal_factor" attrs="{'invisible': [('apply_seasonal_factor', '=', False)]}"/>
                        </group>
                    </group>
                    <field name="active" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Billing Rule Search View -->
    <record id="view_wms_billing_rule_search" model="ir.ui.view">
        <field name="name">wms.billing.rule.search</field>
        <field name="model">wms.billing.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="operation_type"/>
                <field name="service_type"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_owner" string="Owner" context="{'group_by': 'owner_id'}"/>
                    <filter name="group_by_operation" string="Operation Type" context="{'group_by': 'operation_type'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>