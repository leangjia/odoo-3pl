<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Billing Record Tree View -->
    <record id="view_wms_billing_record_list" model="ir.ui.view">
        <field name="name">wms.billing.record.tree</field>
        <field name="model">wms.billing.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="operation_type"/>
                <field name="operation_date"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Billing Record Form View -->
    <record id="view_wms_billing_record_form" model="ir.ui.view">
        <field name="name">wms.billing.record.form</field>
        <field name="model">wms.billing.record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_create_invoice" type="object" string="Create Invoice" invisible="state != 'confirmed'"/>
                    <button name="action_mark_paid" type="object" string="Mark as Paid" invisible="state != 'invoiced'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,paid,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="owner_id"/>
                            <field name="operation_type"/>
                        </group>
                        <group>
                            <field name="service_type"/>
                            <field name="operation_date"/>
                        </group>
                    </group>
                    <group string="Calculation">
                        <group>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="billing_rule_id"/>
                            <field name="calculation_method"/>
                        </group>
                    </group>
                    <group string="Related Documents">
                        <group>
                            <field name="related_picking_id"/>
                            <field name="related_move_id"/>
                        </group>
                        <group>
                            <field name="invoice_id" readonly="1"/>
                            <field name="calculated_by"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Billing Record Search View -->
    <record id="view_wms_billing_record_search" model="ir.ui.view">
        <field name="name">wms.billing.record.search</field>
        <field name="model">wms.billing.record</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="operation_type"/>
                <field name="operation_date"/>
                <field name="state"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="invoiced" string="Invoiced" domain="[('state', '=', 'invoiced')]"/>
                <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                <filter name="cancelled" string="Cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_owner" string="Owner" context="{'group_by': 'owner_id'}"/>
                    <filter name="group_by_operation" string="Operation Type" context="{'group_by': 'operation_type'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'operation_date:day'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Billing Record Pivot View -->
    <record id="view_wms_billing_record_pivot" model="ir.ui.view">
        <field name="name">wms.billing.record.pivot</field>
        <field name="model">wms.billing.record</field>
        <field name="arch" type="xml">
            <pivot string="Billing Analysis">
                <field name="owner_id" type="row"/>
                <field name="operation_type" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Billing Record Graph View -->
    <record id="view_wms_billing_record_graph" model="ir.ui.view">
        <field name="name">wms.billing.record.graph</field>
        <field name="model">wms.billing.record</field>
        <field name="arch" type="xml">
            <graph string="Billing Analysis">
                <field name="operation_type"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>