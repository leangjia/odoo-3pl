<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit from Odoo's native traceability report if available -->
    <record id="view_wms_stock_traceability_report_kanban" model="ir.ui.view">
        <field name="name">wms.stock.traceability.report.kanban</field>
        <field name="model">wms.stock.traceability.report</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <div class="oe_kanban_text">
                                        3PL Traceability Report
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 3PL Traceability Report Action -->
    <record id="action_wms_stock_traceability_report" model="ir.actions.act_window">
        <field name="name">3PL Traceability Report</field>
        <field name="res_model">wms.stock.traceability.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_lot_id': active_id}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No traceability data found</p>
            <p>
                This report shows the full traceability of lots/serial numbers through the supply chain,
                including 3PL-specific information like owner, cargo type, work zones, and ABC classification.
            </p>
        </field>
    </record>
</odoo>