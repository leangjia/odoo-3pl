<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Lot Traceability Form View -->
    <record id="view_stock_lot_traceability_form" model="ir.ui.view">
        <field name="name">stock.lot.traceability.form</field>
        <field name="model">stock.lot.traceability</field>
        <field name="arch" type="xml">
            <form string="Lot Traceability">
                <header>
                    <button name="action_compute_full_traceability" string="Compute Traceability" type="object" class="btn-primary"/>
                    <button name="action_refresh_traceability" string="Refresh" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_upstream_moves" type="object" class="oe_stat_button" icon="fa-truck" string="Upstream Moves"/>
                        <button name="action_view_downstream_moves" type="object" class="oe_stat_button" icon="fa-truck" string="Downstream Moves"/>
                        <button name="action_view_location_history" type="object" class="oe_stat_button" icon="fa-map-marker" string="Locations"/>
                    </div>
                    <group>
                        <group>
                            <field name="lot_id"/>
                            <field name="product_id"/>
                            <field name="company_id"/>
                            <field name="owner_id"/>
                        </group>
                        <group>
                            <field name="total_quantity"/>
                            <field name="available_quantity"/>
                            <field name="upstream_move_count"/>
                            <field name="downstream_move_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dates" name="dates">
                            <group>
                                <field name="first_entry_date"/>
                                <field name="last_exit_date"/>
                            </group>
                        </page>
                        <page string="Locations" name="locations">
                            <field name="location_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="complete_name"/>
                                    <field name="location_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stock Lot Traceability Tree View -->
    <record id="view_stock_lot_traceability_tree" model="ir.ui.view">
        <field name="name">stock.lot.traceability.tree</field>
        <field name="model">stock.lot.traceability</field>
        <field name="arch" type="xml">
            <tree string="Lot Traceability">
                <field name="lot_id"/>
                <field name="product_id"/>
                <field name="owner_id"/>
                <field name="total_quantity"/>
                <field name="available_quantity"/>
                <field name="upstream_move_count"/>
                <field name="downstream_move_count"/>
                <field name="first_entry_date"/>
                <field name="last_exit_date"/>
            </tree>
        </field>
    </record>

    <!-- Stock Lot Traceability Action -->
    <record id="action_stock_lot_traceability" model="ir.actions.act_window">
        <field name="name">Lot Traceability</field>
        <field name="res_model">stock.lot.traceability</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>