<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Stock Picking Views for Container Management -->

    <!-- Add container fields to Stock Picking form view -->
    <record id="view_stock_picking_form_container" model="ir.ui.view">
        <field name="name">stock.picking.form.container</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="container_count" invisible="container_count == 0"/>
            </xpath>
            <div name="button_box" position="inside">
                <button name="action_scan_container" type="object" class="oe_stat_button" icon="fa-qrcode" invisible="state in ('done', 'cancel')">
                    <field string="Containers" name="container_count" widget="statinfo"/>
                </button>
            </div>
            <notebook position="inside">
                <page string="Containers" invisible="container_count == 0">
                    <field name="container_ids" nolabel="1"/>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Add container fields to Stock Picking list view -->
    <record id="view_stock_picking_list_container" model="ir.ui.view">
        <field name="name">stock.picking.list.container</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="container_count" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Add container filter to Stock Picking search view -->
    <record id="view_stock_picking_search_container" model="ir.ui.view">
        <field name="name">stock.picking.search.container</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="container_ids"/>
            </field>
            <filter name="my_transfers" position="after">
                <filter name="with_containers" string="With Containers" domain="[('container_ids', '!=', [])]"/>
            </filter>
            <group expand="0" string="Group By">
                <filter name="group_by_container" string="Container" context="{'group_by': 'container_ids'}"/>
            </group>
        </field>
    </record>
</odoo>