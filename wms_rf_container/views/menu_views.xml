<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Container Management Menu -->
    <menuitem id="menu_wms_container_root"
              name="Container Management"
              sequence="60"
              web_icon="wms_rf_container,static/description/icon.png"/>

    <menuitem id="menu_wms_container_main"
              name="Containers"
              parent="menu_wms_container_root"
              sequence="10"/>

    <menuitem id="menu_wms_container_list"
              name="All Containers"
              parent="menu_wms_container_main"
              action="action_wms_container_list"
              sequence="10"/>

    <menuitem id="menu_wms_container_content"
              name="Container Contents"
              parent="menu_wms_container_root"
              action="action_wms_container_content_list"
              sequence="20"/>

    <!-- Actions -->
    <record id="action_wms_container_list" model="ir.actions.act_window">
        <field name="name">Containers</field>
        <field name="res_model">wms.container</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new container
            </p><p>
                Manage containers in your warehouse with barcode scanning capabilities.
            </p>
        </field>
    </record>

    <record id="action_wms_container_content_list" model="ir.actions.act_window">
        <field name="name">Container Contents</field>
        <field name="res_model">wms.container.content</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                View container contents
            </p><p>
                Track products stored in containers across your warehouse.
            </p>
        </field>
    </record>
</odoo>