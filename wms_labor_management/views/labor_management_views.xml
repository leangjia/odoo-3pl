<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Labor Task Form View -->
    <record id="view_wms_labor_task_form" model="ir.ui.view">
        <field name="name">wms.labor.task.form</field>
        <field name="model">wms.labor.task</field>
        <field name="arch" type="xml">
            <form string="Labor Task">
                <header>
                    <button name="action_start_task" type="object" string="Start Task" class="btn-primary" invisible="status not in ['draft', 'assigned']"/>
                    <button name="action_complete_task" type="object" string="Complete Task" class="btn-success" invisible="status != 'in_progress'"/>
                    <button name="action_cancel_task" type="object" string="Cancel Task" invisible="status not in ['draft', 'assigned', 'in_progress']"/>
                    <button name="action_reset_to_assigned" type="object" string="Reset to Assigned" invisible="status != 'in_progress'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,assigned,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <div class="o_stat_info">
                            <span class="o_stat_value"><field name="duration"/></span>
                            <span class="o_stat_text">Hours</span>
                        </div>
                        <div class="o_stat_info">
                            <span class="o_stat_value"><field name="efficiency"/>%</span>
                            <span class="o_stat_text">Efficiency</span>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="task_code"/>
                            <field name="activity_id"/>
                            <field name="owner_id"/>
                        </group>
                        <group>
                            <field name="assigned_to"/>
                            <field name="assigned_team"/>
                            <field name="priority"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group string="Schedule">
                        <group>
                            <field name="planned_start_date"/>
                            <field name="planned_end_date"/>
                        </group>
                        <group>
                            <field name="actual_start_date"/>
                            <field name="actual_end_date"/>
                        </group>
                    </group>
                    <group string="Work Related">
                        <group>
                            <field name="picking_id"/>
                            <field name="inventory_id"/>
                        </group>
                        <group>
                            <field name="qc_session_id"/>
                            <field name="quantity_processed"/>
                        </group>
                    </group>
                    <group string="Performance">
                        <group>
                            <field name="standard_duration"/>
                            <field name="duration"/>
                            <field name="efficiency" widget="float_percentage"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Labor Task List View -->
    <record id="view_wms_labor_task_list" model="ir.ui.view">
        <field name="name">wms.labor.task.list</field>
        <field name="model">wms.labor.task</field>
