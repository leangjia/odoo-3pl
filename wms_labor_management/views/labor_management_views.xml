    </record>

    <!-- Labor Task Search View -->
    <record id="view_wms_labor_task_search" model="ir.ui.view">
        <field name="name">wms.labor.task.search</field>
        <field name="model">wms.labor.task</field>
        <field name="arch" type="xml">
            <search string="Labor Tasks">
                <field name="name"/>
                <field name="activity_id"/>
                <field name="assigned_to"/>
                <field name="status"/>
                <field name="priority"/>
                <field name="planned_start_date"/>
                <group expand="0" string="Group By">
                    <filter string="Activity" name="group_activity" domain="[]" context="{'group_by':'activity_id'}"/>
                    <filter string="Assigned To" name="group_assigned" domain="[]" context="{'group_by':'assigned_to'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by':'status'}"/>
                    <filter string="Priority" name="group_priority" domain="[]" context="{'group_by':'priority'}"/>
                </group>
            </search>
        </field>
    </record>

