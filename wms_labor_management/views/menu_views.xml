<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Labor Management Menu -->
    <menuitem id="menu_wms_labor_management_root"
              name="Labor Management"
              parent="hr.menu_hr_root"
              sequence="120"/>

    <menuitem id="menu_wms_labor_tasks"
              name="Labor Tasks"
              parent="menu_wms_labor_management_root"
              action="action_wms_labor_task_list"
              sequence="10"/>

    <menuitem id="menu_wms_labor_activities"
              name="Labor Activities"
              parent="menu_wms_labor_management_root"
              action="action_wms_labor_activity_list"
              sequence="20"/>

    <menuitem id="menu_wms_labor_schedules"
              name="Labor Schedules"
              parent="menu_wms_labor_management_root"
              action="action_wms_labor_schedule_list"
              sequence="30"/>

    <menuitem id="menu_wms_employee_skills"
              name="Employee Skills"
              parent="menu_wms_labor_management_root"
              action="action_wms_employee_skill_list"
              sequence="40"/>

    <menuitem id="menu_wms_labor_performance"
              name="Labor Performance"
              parent="menu_wms_labor_management_root"
              action="action_wms_labor_performance_list"
              sequence="50"/>

    <menuitem id="menu_wms_labor_costs"
              name="Labor Costs"
              parent="menu_wms_labor_management_root"
              action="action_wms_labor_cost_list"
              sequence="60"/>

    <!-- Actions -->
    <record id="action_wms_labor_task_list" model="ir.actions.act_window">
        <field name="name">Labor Tasks</field>
        <field name="res_model">wms.labor.task</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new labor task
            </p><p>
                Manage labor tasks and assignments in the warehouse.
            </p>
        </field>
    </record>

    <record id="action_wms_labor_activity_list" model="ir.actions.act_window">
        <field name="name">Labor Activities</field>
        <field name="res_model">wms.labor.activity</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define labor activities
            </p><p>
                Set up standard labor activities for time tracking.
            </p>
        </field>
    </record>

    <record id="action_wms_labor_schedule_list" model="ir.actions.act_window">
        <field name="name">Labor Schedules</field>
        <field name="res_model">wms.labor.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage labor schedules
            </p><p>
                Schedule employees for shifts and assignments.
            </p>
        </field>
    </record>

    <record id="action_wms_employee_skill_list" model="ir.actions.act_window">
        <field name="name">Employee Skills</field>
        <field name="res_model">wms.employee.skill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track employee skills
            </p><p>
                Manage employee skills and certifications.
            </p>
        </field>
    </record>

    <record id="action_wms_labor_performance_list" model="ir.actions.act_window">
        <field name="name">Labor Performance</field>
        <field name="res_model">wms.labor.performance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track labor performance
            </p><p>
                Monitor employee productivity and efficiency.
            </p>
        </field>
    </record>

    <record id="action_wms_labor_cost_list" model="ir.actions.act_window">
        <field name="name">Labor Costs</field>
        <field name="res_model">wms.labor.cost</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track labor costs
            </p><p>
                Monitor labor costs and allocation.
            </p>
        </field>
    </record>
</odoo>