<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_wms_labor_task_list" model="ir.actions.act_window">
        <field name="name">Labor Tasks</field>
        <field name="res_model">wms.labor.task</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new labor task
            </p><p>
                Manage labor tasks and assignments in the warehouse.
            </p>
        </field>
    </record>

    <record id="action_wms_labor_activity_list" model="ir.actions.act_window">
        <field name="name">Labor Activities</field>
        <field name="res_model">wms.labor.activity</field>
