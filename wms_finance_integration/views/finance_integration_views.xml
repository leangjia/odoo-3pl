<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cost Center Form View -->
    <record id="view_wms_cost_center_form" model="ir.ui.view">
        <field name="name">wms.cost.center.form</field>
        <field name="model">wms.cost.center</field>
        <field name="arch" type="xml">
            <form string="Cost Center">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="owner_id"/>
                        </group>
                    </group>
                    <group string="Financial Accounts">
                        <group>
                            <field name="expense_account_id"/>
                            <field name="revenue_account_id"/>
                        </group>
                    </group>
                    <group string="Budget Information">
                        <group>
                            <field name="budget_amount"/>
                            <field name="budget_currency_id"/>
                        </group>
                        <group>
                            <field name="current_spending"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cost Center List View -->
    <record id="view_wms_cost_center_list" model="ir.ui.view">
        <field name="name">wms.cost.center.list</field>
        <field name="model">wms.cost.center</field>
        <field name="arch" type="xml">
            <list string="Cost Centers">
                <field name="name"/>
                <field name="code"/>
                <field name="owner_id"/>
                <field name="current_spending"/>
                <field name="budget_amount"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Service Type Form View -->
    <record id="view_wms_service_type_form" model="ir.ui.view">
        <field name="name">wms.service.type.form</field>
        <field name="model">wms.service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="default_rate"/>
                            <field name="rate_unit"/>
                        </group>
                    </group>
                    <group string="Accounting">
                        <group>
                            <field name="income_account_id"/>
                            <field name="expense_account_id"/>
                        </group>
                        <group>
                            <field name="tax_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Type List View -->
    <record id="view_wms_service_type_list" model="ir.ui.view">
        <field name="name">wms.service.type.list</field>
        <field name="model">wms.service.type</field>
        <field name="arch" type="xml">
            <list string="Service Types">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="default_rate"/>
                <field name="rate_unit"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Service Pricing Form View -->
    <record id="view_wms_service_pricing_form" model="ir.ui.view">
        <field name="name">wms.service.pricing.form</field>
        <field name="model">wms.service.pricing</field>
        <field name="arch" type="xml">
            <form string="Service Pricing">
                <sheet>
                    <group>
                        <group>
                            <field name="service_type_id"/>
                            <field name="owner_id"/>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="effective_date"/>
                            <field name="expiry_date"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <group string="Pricing">
                        <group>
                            <field name="rate"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="min_charge"/>
                        </group>
                    </group>
                    <group string="Quantity Limits">
                        <group>
                            <field name="min_quantity"/>
                            <field name="max_quantity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Pricing List View -->
    <record id="view_wms_service_pricing_list" model="ir.ui.view">
        <field name="name">wms.service.pricing.list</field>
        <field name="model">wms.service.pricing</field>
        <field name="arch" type="xml">
            <list string="Service Pricing">
                <field name="service_type_id"/>
                <field name="owner_id"/>
                <field name="location_id"/>
                <field name="rate"/>
                <field name="currency_id"/>
                <field name="effective_date"/>
                <field name="expiry_date"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Financial Transaction Form View -->
    <record id="view_wms_financial_transaction_form" model="ir.ui.view">
        <field name="name">wms.financial.transaction.form</field>
        <field name="model">wms.financial.transaction</field>
        <field name="arch" type="xml">
            <form string="Financial Transaction">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="btn-primary"/>
                    <button name="action_post" type="object" string="Post" states="draft,confirmed" class="btn-success"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirmed" class="btn-default"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,posted,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rmas" type="object" class="oe_stat_button" icon="fa-dollar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="total_amount"/></span>
                                <span class="o_stat_text">Total</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="transaction_type"/>
                            <field name="owner_id"/>
                        </group>
                        <group>
                            <field name="transaction_date"/>
                            <field name="due_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="cost_center_id"/>
                            <field name="service_type_id"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="amount"/>
                            <field name="tax_amount"/>
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="posting_date"/>
                            <field name="is_posted"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Related To">
                            <group>
                                <field name="related_model"/>
                                <field name="related_id"/>
                            </group>
                        </page>
                        <page string="Accounting">
                            <group>
                                <field name="move_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Financial Transaction List View -->
    <record id="view_wms_financial_transaction_list" model="ir.ui.view">
        <field name="name">wms.financial.transaction.list</field>
        <field name="model">wms.financial.transaction</field>
        <field name="arch" type="xml">
            <list string="Financial Transactions">
                <field name="name"/>
                <field name="transaction_type"/>
                <field name="owner_id"/>
                <field name="service_type_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="transaction_date"/>
                <field name="status"/>
                <field name="is_posted"/>
            </list>
        </field>
    </record>

    <!-- Cost Allocation Form View -->
    <record id="view_wms_cost_allocation_form" model="ir.ui.view">
        <field name="name">wms.cost.allocation.form</field>
        <field name="model">wms.cost.allocation</field>
        <field name="arch" type="xml">
            <form string="Cost Allocation">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="btn-primary"/>
                    <button name="action_post" type="object" string="Post" states="draft,confirmed" class="btn-success"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,posted"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="allocation_code"/>
                            <field name="owner_id"/>
                        </group>
                        <group>
                            <field name="allocation_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="source_cost_center_id"/>
                            <field name="target_cost_center_id"/>
                        </group>
                        <group>
                            <field name="allocation_type"/>
                            <field name="allocation_basis"/>
                        </group>
                    </group>
                    <group string="Allocation Amount">
                        <group>
                            <field name="amount"/>
                            <field name="percentage"/>
                        </group>
                    </group>
                    <group string="Accounting">
                        <group>
                            <field name="journal_id"/>
                            <field name="move_id"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cost Allocation List View -->
    <record id="view_wms_cost_allocation_list" model="ir.ui.view">
        <field name="name">wms.cost.allocation.list</field>
        <field name="model">wms.cost.allocation</field>
        <field name="arch" type="xml">
            <list string="Cost Allocations">
                <field name="allocation_code"/>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="source_cost_center_id"/>
                <field name="target_cost_center_id"/>
                <field name="amount"/>
                <field name="allocation_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Financial Report Form View -->
    <record id="view_wms_financial_report_form" model="ir.ui.view">
        <field name="name">wms.financial.report.form</field>
        <field name="model">wms.financial.report</field>
        <field name="arch" type="xml">
            <form string="Financial Report">
                <header>
                    <button name="action_generate_report" type="object" string="Generate Report" states="draft" class="btn-primary"/>
                    <button name="action_validate_report" type="object" string="Validate Report" states="generated" class="btn-success"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,generated,validated,archived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rmas" type="object" class="oe_stat_button" icon="fa-dollar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="total_revenue"/></span>
                                <span class="o_stat_text">Revenue</span>
                            </div>
                        </button>
                        <button name="action_view_rmas" type="object" class="oe_stat_button" icon="fa-bar-chart">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="net_income"/></span>
                                <span class="o_stat_text">Net Income</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="report_code"/>
                            <field name="owner_id"/>
                        </group>
                        <group>
                            <field name="report_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group string="Period">
                        <group>
                            <field name="period_start"/>
                            <field name="period_end"/>
                        </group>
                    </group>
                    <group string="Financial Summary">
                        <group>
                            <field name="total_revenue"/>
                            <field name="total_expenses"/>
                        </group>
                        <group>
                            <field name="net_income"/>
                        </group>
                    </group>
                    <group string="Revenue Breakdown">
                        <group>
                            <field name="storage_revenue"/>
                            <field name="handling_revenue"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Report Content">
                            <field name="report_content" nolabel="1"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Financial Report List View -->
    <record id="view_wms_financial_report_list" model="ir.ui.view">
        <field name="name">wms.financial.report.list</field>
        <field name="model">wms.financial.report</field>
        <field name="arch" type="xml">
            <list string="Financial Reports">
                <field name="report_code"/>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="report_date"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="total_revenue"/>
                <field name="net_income"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Invoice Integration Form View -->
    <record id="view_wms_invoice_integration_form" model="ir.ui.view">
        <field name="name">wms.invoice.integration.form</field>
        <field name="model">wms.invoice.integration</field>
        <field name="arch" type="xml">
            <form string="Invoice Integration">
                <header>
                    <button name="action_send_invoice" type="object" string="Send Invoice" states="draft" class="btn-primary"/>
                    <button name="action_mark_paid" type="object" string="Mark as Paid" states="sent,overdue" class="btn-success"/>
                    <button name="action_cancel_invoice" type="object" string="Cancel Invoice" states="draft,sent" class="btn-danger"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,sent,paid,overdue,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rmas" type="object" class="oe_stat_button" icon="fa-dollar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="total_amount"/></span>
                                <span class="o_stat_text">Total</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="owner_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="invoice_date"/>
                            <field name="due_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="currency_id"/>
                            <field name="salesperson_id"/>
                        </group>
                        <group>
                            <field name="invoice_id"/>
                        </group>
                    </group>
                    <group string="Amounts">
                        <group>
                            <field name="subtotal"/>
                            <field name="tax_amount"/>
                        </group>
                        <group>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <group string="Related Transactions">
                        <field name="related_transactions" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Invoice Integration List View -->
    <record id="view_wms_invoice_integration_list" model="ir.ui.view">
        <field name="name">wms.invoice.integration.list</field>
        <field name="model">wms.invoice.integration</field>
        <field name="arch" type="xml">
            <list string="Invoice Integration">
                <field name="name"/>
                <field name="owner_id"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="total_amount"/>
                <field name="currency_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Financial Transaction Search View -->
    <record id="view_wms_financial_transaction_search" model="ir.ui.view">
        <field name="name">wms.financial.transaction.search</field>
        <field name="model">wms.financial.transaction</field>
        <field name="arch" type="xml">
            <search string="Financial Transactions">
                <field name="name"/>
                <field name="transaction_type"/>
                <field name="owner_id"/>
                <field name="service_type_id"/>
                <field name="status"/>
                <field name="transaction_date"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <group expand="0" string="Group By">
                    <filter string="Transaction Type" name="group_transaction_type" domain="[]" context="{'group_by':'transaction_type'}"/>
                    <filter string="Owner" name="group_owner" domain="[]" context="{'group_by':'owner_id'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by':'status'}"/>
                    <filter string="Service Type" name="group_service_type" domain="[]" context="{'group_by':'service_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>