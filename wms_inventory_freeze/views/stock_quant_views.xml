<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Stock Quant Views for Inventory Freeze -->

    <!-- Add freeze fields to Stock Quant list view -->
    <record id="view_stock_quant_list_freeze" model="ir.ui.view">
        <field name="name">stock.quant.list.freeze</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <list>
                <field name="location_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="is_frozen" optional="show"/>
                <field name="lot_id" optional="show"/>
                <field name="owner_id" optional="show"/>
            </list>
        </field>
    </record>


    <!-- Add freeze filter to Stock Quant search view -->
    <record id="view_stock_quant_search_freeze" model="ir.ui.view">
        <field name="name">stock.quant.search.freeze</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <search>
                <field name="location_id"/>
                <field name="product_id"/>
                <field name="is_frozen"/>
                <filter name="frozen" string="Frozen" domain="[('is_frozen', '=', True)]"/>
                <filter name="not_frozen" string="Not Frozen" domain="[('is_frozen', '=', False)]"/>
            </search>
        </field>
    </record>

</odoo>