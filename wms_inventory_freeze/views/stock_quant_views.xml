<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Stock Quant Views for Inventory Freeze -->

    <!-- Add freeze fields to Stock Quant tree view -->
    <record id="view_stock_quant_tree_freeze" model="ir.ui.view">
        <field name="name">stock.quant.tree.freeze</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="is_frozen" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Add freeze fields to Stock Quant form view -->
    <record id="view_stock_quant_form_freeze" model="ir.ui.view">
        <field name="name">stock.quant.form.freeze</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_freeze_inventory" type="object" class="oe_stat_button" icon="fa-snowflake-o" invisible="is_frozen">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Freeze</span>
                    </div>
                </button>
                <field name="is_frozen" widget="boolean_button" options='{"terminology": "frozen"}'/>
            </div>
            <group name="main_info" position="after">
                <group string="Freeze Information" invisible="not is_frozen">
                    <field name="freeze_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="reason"/>
                            <field name="status"/>
                            <field name="freeze_date"/>
                            <field name="unfreeze_date"/>
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

    <!-- Add freeze filter to Stock Quant search view -->
    <record id="view_stock_quant_search_freeze" model="ir.ui.view">
        <field name="name">stock.quant.search.freeze</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_search"/>
        <field name="arch" type="xml">
            <filter name="group_by_location" position="before">
                <filter name="frozen" string="Frozen" domain="[('is_frozen', '=', True)]"/>
                <filter name="not_frozen" string="Not Frozen" domain="[('is_frozen', '=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>