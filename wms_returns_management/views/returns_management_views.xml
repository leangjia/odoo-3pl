<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Return Authorization Form View -->
    <record id="view_wms_return_authorization_form" model="ir.ui.view">
        <field name="name">wms.return.authorization.form</field>
        <field name="model">wms.return.authorization</field>
        <field name="arch" type="xml">
            <form string="Return Authorization">
                <header>
                    <button name="action_confirm" type="object" string="Confirm RMA" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_send_for_return" type="object" string="Send for Return" invisible="state != 'confirmed'"/>
                    <button name="action_receive_return" type="object" string="Receive Return" invisible="state not in ['in_transit','confirmed']"/>
                    <button name="action_approve" type="object" string="Approve Return" invisible="state != 'received'"/>
                    <button name="action_reject" type="object" string="Reject Return" invisible="state not in ['received','approved']"/>
                    <button name="action_complete" type="object" string="Complete Return" invisible="state not in ['approved','rejected']"/>
                    <button name="action_cancel" type="object" string="Cancel RMA" invisible="state not in ['draft','confirmed']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,received,approved,completed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                            <field name="owner_id"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group>
                            <field name="date_issued"/>
                            <field name="date_deadline"/>
                            <field name="return_reason"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <group string="Return Details">
                        <group>
                            <field name="return_method"/>
                            <field name="return_cost"/>
                        </group>
                        <group>
                            <field name="carrier_id"/>
                            <field name="tracking_number"/>
                        </group>
                    </group>
                    <group string="Quality &amp; Disposition">
                        <group>
                            <field name="qc_required"/>
                            <field name="qc_completed"/>
                        </group>
                        <group>
                            <field name="disposition"/>
                            <field name="refund_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Return Items">
                            <field name="return_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="product_uom"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                    <field name="condition"/>
                                </list>
                            </field>
                        </page>
                        <page string="Details">
                            <group>
                                <field name="return_reason_description" placeholder="Describe the return reason..."/>
                            </group>
                            <group>
                                <field name="qc_notes" placeholder="Quality control notes..."/>
                            </group>
                            <group>
                                <field name="notes" placeholder="Additional notes..."/>
                            </group>
                        </page>
                        <page string="Financial Information">
                            <group>
                                <field name="refund_amount"/>
                                <field name="refund_reference"/>
                                <field name="refund_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Return Authorization Tree View -->
    <record id="view_wms_return_authorization_list" model="ir.ui.view">
        <field name="name">wms.return.authorization.list</field>
        <field name="model">wms.return.authorization</field>
        <field name="arch" type="xml">
            <list string="Return Authorizations">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="owner_id"/>
                <field name="return_reason"/>
                <field name="date_issued"/>
                <field name="state"/>
                <field name="refund_amount"/>
                <field name="product_qty"/>
            </list>
        </field>
    </record>

    <!-- Return Authorization Search View -->
    <record id="view_wms_return_authorization_search" model="ir.ui.view">
        <field name="name">wms.return.authorization.search</field>
        <field name="model">wms.return.authorization</field>
        <field name="arch" type="xml">
            <search string="Return Authorizations">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="owner_id"/>
                <field name="return_reason"/>
                <field name="date_issued"/>
                <field name="state"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" domain="[]" context="{'group_by':'customer_id'}"/>
                    <filter string="Owner" name="group_owner" domain="[]" context="{'group_by':'owner_id'}"/>
                    <filter string="Return Reason" name="group_reason" domain="[]" context="{'group_by':'return_reason'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Return Line Form View -->
    <record id="view_wms_return_line_form" model="ir.ui.view">
        <field name="name">wms.return.line.form</field>
        <field name="model">wms.return.line</field>
        <field name="arch" type="xml">
            <form string="Return Line">
                <sheet>
                    <group>
                        <group>
                            <field name="rma_id"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="product_uom"/>
                            <field name="unit_price"/>
                            <field name="subtotal"/>
                        </group>
                    </group>
                    <group string="Item Details">
                        <field name="reason"/>
                        <field name="condition"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Return Line List View -->
    <record id="view_wms_return_line_list" model="ir.ui.view">
        <field name="name">wms.return.line.list</field>
        <field name="model">wms.return.line</field>
        <field name="arch" type="xml">
            <list string="Return Lines">
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="product_uom"/>
                <field name="unit_price"/>
                <field name="subtotal"/>
                <field name="condition"/>
            </list>
        </field>
    </record>
</odoo>