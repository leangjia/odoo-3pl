<odoo>
    <!-- Actions -->
    <record id="action_wms_energy_equipment_list" model="ir.actions.act_window">
        <field name="name">Energy Equipment</field>
        <field name="res_model">wms.energy.equipment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage energy equipment
            </p><p>
                Track and manage energy consumption equipment in the warehouse.
            </p>
        </field>
    </record>

